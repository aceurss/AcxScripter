--// Rayfield GUI Auto Farm Script for Ninja Legends
local Rayfield = loadstring(game:HttpGet('https://raw.githubusercontent.com/shlexware/Rayfield/main/source'))()

local Window = Rayfield:CreateWindow({
   Name = "AZX HUB",
   LoadingTitle = "Loading GUI...",
   LoadingSubtitle = "By AcxScripter",
   ConfigurationSaving = {
      Enabled = false,
   },
   Discord = {
      Enabled = false,
   },
})

-- Main Tab
local MainTab = Window:CreateTab("Main")

MainTab:CreateToggle({
   Name = "Auto Sell",
   CurrentValue = false,
   Callback = function(Value)
      getgenv().AutoSell = Value
      while getgenv().AutoSell do
         wait(1)
         game:GetService("ReplicatedStorage").rEvents.sellNinjitsuRemote:InvokeServer()
      end
   end,
})

MainTab:CreateToggle({
   Name = "Auto Full Sell",
   CurrentValue = false,
   Callback = function(Value)
      getgenv().AutoFullSell = Value
      while getgenv().AutoFullSell do
         wait(1)
         if game.Players.LocalPlayer.PlayerGui.MainGui.FullBelt.Visible then
            game:GetService("ReplicatedStorage").rEvents.sellNinjitsuRemote:InvokeServer()
         end
      end
   end,
})

MainTab:CreateToggle({
   Name = "Auto Collect Coins",
   CurrentValue = false,
   Callback = function(Value)
      getgenv().AutoCollectCoins = Value
      while getgenv().AutoCollectCoins do
         wait(1)
         for _,v in pairs(game.Workspace:GetDescendants()) do
            if v:IsA("TouchTransmitter") and v.Parent.Name == "Coin" then
               firetouchinterest(game.Players.LocalPlayer.Character.Head, v.Parent, 0)
               firetouchinterest(game.Players.LocalPlayer.Character.Head, v.Parent, 1)
            end
         end
      end
   end,
})

MainTab:CreateButton({
   Name = "Unlock All Islands",
   Callback = function()
      for _,v in pairs(game.Workspace.islandUnlockParts:GetChildren()) do
         game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = v.CFrame
         wait(0.5)
      end
   end,
})

MainTab:CreateDropdown({
   Name = "Teleport to Island",
   Options = {"Enchanted Island", "Astral Island", "Mystical Island", "Space Island"},
   Callback = function(Selected)
      for _,v in pairs(game.Workspace.islandUnlockParts:GetChildren()) do
         if v.Name == Selected then
            game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = v.CFrame
         end
      end
   end,
})

MainTab:CreateToggle({
   Name = "Auto Buy Swords",
   CurrentValue = false,
   Callback = function(Value)
      getgenv().AutoBuySwords = Value
      while getgenv().AutoBuySwords do
         wait(1)
         game:GetService("ReplicatedStorage").rEvents.buyAllSwordsRemote:InvokeServer()
      end
   end,
})

MainTab:CreateToggle({
   Name = "Auto Buy Belts",
   CurrentValue = false,
   Callback = function(Value)
      getgenv().AutoBuyBelts = Value
      while getgenv().AutoBuyBelts do
         wait(1)
         game:GetService("ReplicatedStorage").rEvents.buyAllBeltsRemote:InvokeServer()
      end
   end,
})

MainTab:CreateToggle({
   Name = "Auto Buy Ranks",
   CurrentValue = false,
   Callback = function(Value)
      getgenv().AutoBuyRanks = Value
      while getgenv().AutoBuyRanks do
         wait(1)
         game:GetService("ReplicatedStorage").rEvents.rankUpRemote:InvokeServer()
      end
   end,
})

MainTab:CreateToggle({
   Name = "Auto Upgrade Skills",
   CurrentValue = false,
   Callback = function(Value)
      getgenv().AutoUpgradeSkills = Value
      while getgenv().AutoUpgradeSkills do
         wait(1)
         game:GetService("ReplicatedStorage").rEvents.buyAllSkillsRemote:InvokeServer()
      end
   end,
})
